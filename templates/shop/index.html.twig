{% extends 'base.html.twig' %}

{% block title %}Shop - My Flowery Store{% endblock %}

{% block body %}
<style>
    .shop-container { text-align: center; padding: 20px; }
    .product-card { border: 1px solid #ddd; padding: 15px; margin: 10px; display: inline-block; width: 250px; }
    .product-card img { width: 100%; height: auto; border-radius: 5px; }
    .product-card h3 { margin: 10px 0; }
    .product-card p { font-size: 14px; }
</style>

<div class="shop-container">
    <h1>Our Products ðŸŒº</h1>

    {% if products is empty %}
        <p>No products available.</p>
    {% else %}
        {% for product in products %}
            <div class="product-card">
             <a href="{{ path('details', {'id': product.id}) }}">
                <img src="{{ asset(product.imageP) }}" alt="{{ product.nameP }}">
             </a>
                <h3>{{ product.nameP }}</h3>
                <p><strong>Category:</strong> {{ product.categoryP }}</p>
                <p><strong>Price:</strong> ${{ product.priceP }}</p>
                <p>{{ product.descriptionP }}</p>
            </div>
        {% endfor %}
    {% endif %}
</div>
{% endblock %}

