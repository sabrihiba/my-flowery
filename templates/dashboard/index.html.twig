{% extends 'base.html.twig' %}

{% block title %}Dashboard - My Flowery Shop{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .dashboard-container {
            margin: 20px;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .dashboard-container h1 {
            font-size: 2.5rem;
            color: #d63384;
            text-align: center;
            margin-bottom: 30px;
        }

        .dashboard-links {
            text-align: center;
            margin-bottom: 40px;
        }

        .btn-pink {
            background-color: #ff69b4;
            color: white;
            padding: 12px 25px;
            border-radius: 6px;
            text-decoration: none;
            border: none;
            cursor: pointer;
            font-weight: bold;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            transition: background-color 0.3s ease;
        }

        .btn-pink:hover {
            background-color: #ff1493;
        }

        .form-container {
            max-width: 800px;
            margin: 0 auto 50px auto;
            padding: 25px;
            background-color: #fff0f5;
            border-radius: 10px;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            font-size: 1.1rem;
            color: #555;
            font-weight: 600;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 6px;
            box-sizing: border-box;
            transition: border-color 0.3s ease;
        }

        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            border-color: #ff69b4;
            outline: none;
        }

        button {
            display: block;
            width: 100%;
            padding: 12px;
            background-color: #ff69b4;
            color: white;
            border: none;
            border-radius: 6px;
            font-size: 1.1rem;
            font-weight: bold;
            transition: background-color 0.3s ease;
        }

        button:hover {
            background-color: #ff1493;
        }

        .product-table {
            width: 100%;
            margin-top: 40px;
            border-collapse: collapse;
        }

        .product-table th,
        .product-table td {
            border: 1px solid #ccc;
            padding: 12px;
            text-align: center;
        }

        .product-table th {
            background-color: #ffe4ec;
            color: #333;
            font-weight: 600;
        }

        .action-buttons a,
        .action-buttons form {
            display: inline-block;
            margin: 0 5px;
        }

        .btn-action {
            padding: 6px 12px;
            border: none;
            border-radius: 4px;
            font-size: 0.9rem;
            cursor: pointer;
        }

        .btn-edit {
            background-color: #4CAF50;
            color: white;
        }

        .btn-delete {
            background-color: #f44336;
            color: white;
        }
    </style>
{% endblock %}

{% block body %}
<div class="dashboard-container">
    <h1>Welcome to Your Dashboard! ðŸŒ¸</h1>

    <div class="dashboard-links">
        <a href="{{ path('shop') }}" class="btn btn-pink">View Shop</a>
    </div>

    <h2 style="text-align: center; color: #d63384;">Add a New Product</h2>

    <div class="form-container">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.nameP) }}
                {{ form_widget(form.nameP) }}
            </div>
            <div class="form-group">
                {{ form_label(form.categoryP) }}
                {{ form_widget(form.categoryP) }}
            </div>
            <div class="form-group">
                {{ form_label(form.priceP) }}
                {{ form_widget(form.priceP) }}
            </div>
            <div class="form-group">
                {{ form_label(form.stockP) }}
                {{ form_widget(form.stockP) }}
            </div>
            <div class="form-group">
                {{ form_label(form.createdP) }}
                {{ form_widget(form.createdP) }}
            </div>
            <div class="form-group">
                {{ form_label(form.descriptionP) }}
                {{ form_widget(form.descriptionP) }}
            </div>
            <div class="form-group">
                {{ form_label(form.imageP) }}
                {{ form_widget(form.imageP) }}
            </div>

            <button type="submit" class="btn btn-pink">Save Product</button>
        {{ form_end(form) }}
    </div>

    <h2 style="text-align: center; color: #d63384;">Product List</h2>

    <table class="product-table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Category</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for product in products %}
                <tr>
                    <td>{{ product.nameP }}</td>
                    <td>{{ product.categoryP }}</td>
                    <td>{{ product.priceP }}</td>
                    <td>{{ product.stockP }}</td>
                    <td>{{ product.createdP|date('Y-m-d') }}</td>
                    <td class="action-buttons">
                        <a href="{{ path('dashboard_edit', {id: product.id}) }}" class="btn-action btn-edit">Edit</a>
                        <form action="{{ path('dashboard_delete', {id: product.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this product?');">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                            <button class="btn-action btn-delete">Delete</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="6">No products found.</td></tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
