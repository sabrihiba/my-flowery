{% extends 'base.html.twig' %}

{% block title %}Dashboard - My Flowery Shop{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .dashboard-container {
            margin: 20px;
            font-family: Arial, sans-serif;
        }

        .dashboard-container h1 {
            font-size: 2rem;
            color: #333;
            text-align: center;
        }

        .dashboard-links {
            text-align: center;
            margin-top: 20px;
        }

        .btn-pink {
            background-color: #ff69b4;
            color: white;
            padding: 12px 25px;
            border-radius: 5px;
            text-decoration: none;
            border: none;
            cursor: pointer;
            font-weight: bold;
        }

        .btn-pink:hover {
            background-color: #ff1493;
        }

        .form-container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #f9f9f9;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            font-size: 1.1rem;
            color: #333;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 10px;
            margin-top: 5px;
            font-size: 1rem;
            border: 1px solid #ccc;
            border-radius: 5px;
            box-sizing: border-box;
        }

        .form-group input[type="date"] {
            padding: 8px;
        }

        button {
            display: block;
            width: 100%;
            padding: 12px;
            background-color: #ff69b4;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 1.1rem;
            font-weight: bold;
        }

        button:hover {
            background-color: #ff1493;
        }
    </style>
{% endblock %}

{% block body %}
<div class="dashboard-container">
    <h1>Welcome to Your Dashboard! ðŸŒ¸</h1>

    <div class="dashboard-links">
        <a href="{{ path('shop') }}" class="btn btn-pink">View Shop</a>
    </div>

    <h2>Add a New Product</h2>

    <div class="form-container">
        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.nameP) }}
                {{ form_widget(form.nameP) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.categoryP) }}
                {{ form_widget(form.categoryP) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.priceP) }}
                {{ form_widget(form.priceP) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.stockP) }}
                {{ form_widget(form.stockP) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.createdP) }}
                {{ form_widget(form.createdP) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.descriptionP) }}
                {{ form_widget(form.descriptionP) }}
            </div>
            
            <div class="form-group">
                {{ form_label(form.imageP) }}
                {{ form_widget(form.imageP) }}
            </div>

            <button type="submit" class="btn btn-pink">Save Product</button>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
