<h1 class="mb-4 text-center">Profile Page</h1>

<div class="card mx-auto" style="max-width: 600px;">
  <div class="card-body">
    <p><strong>Title:</strong> <span class="text-muted">{{ user.title ?: 'Not specified' }}</span></p>
    <p><strong>Full Name:</strong> {{ user.fullName }}</p>
    <p><strong>Email:</strong> {{ user.email }}</p>
    <p><strong>Phone:</strong> <a href="tel:{{ user.phonenumber }}">{{ user.phonenumber ?: 'Not specified' }}</a></p>

    <div class="mt-4 d-flex justify-content-between">
      <a href="{{ path('app_edit_profile') }}" class="btn btn-outline-primary">Edit Profile</a>
      <a href="{{ path('app_change_password') }}" class="btn btn-outline-secondary">Change Password</a>
    </div>
  </div>
</div>
